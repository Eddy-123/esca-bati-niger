{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    
    <!-- Detail -->
    <div class="detail">
        <div class="container-fluid">
            <div class="row my-5">
                <div class="col-md-4 my-5 text-center">
                    <h2 class="mb-3">Description</h2>
                    <p>
                        {{ article.content }}
                    </p>
                </div>
                <div class="col-md-4 my-5">
                    <img src="{{ asset('img/1.jpg') }}" class="w-100">
                </div>
                <div class="col-md-4 my-5 d-flex align-self-center justify-content-end">
                    <h3>Prix : <strong>{{ article.formattedPrice }} FCFA</strong></h3>
                </div>
            </div>
        </div>
    </div>
    <!-- Detail end -->

    <!-- Suggestion -->
    <div class="container-fluid elements">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <p>Ceci pourrait vous intéresser</p>
                </div>
            </div>
        </div>

        <div class="row my-5">
            {% for suggestion in suggestions %}

                <div class="col-md-4 col-sm-6 col-xs-12 my-4">
                    <img src="{{ asset('img/1.jpg') }}" class="w-100">
                    <h4 class="my-4">{{ suggestion.title }}</h4>
                    
                    <p class="d-flex justify-content-between">
                        <a href="{{ path('article_read', {"id": suggestion.id, "slug": suggestion.slug}) }}" class="btn btn-outline-dark btn-md">Détail</a>
                        <a href="{{ path('article_read', {"id": suggestion.id, "slug": suggestion.slug}) }}" class="btn btn-outline-dark btn-md">{{ suggestion.price }}</a>
                    </p>
                </div>
                
            {% endfor %}

        </div>
    </div>
    <!-- Suggestion end -->

{% endblock %}
